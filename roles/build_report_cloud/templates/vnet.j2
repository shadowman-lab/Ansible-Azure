<!-- INTERNAL TABLE FOR Ansible -->
<div id="accordion">
<div>
<h3>{{ ec2_region | default('unknown') }}</h3>
<div class="net_content">
<p class="description">There are <strong>{{ vpc_info.vpcs | length }}</strong> AWS VPCs configured and <strong>{{ ec2_instance_info.instances | length }}</strong> instances on region {{ ec2_region | default('unknown') }}

<table class="net_info">
<tbody>
  <tr>
    <th class="vpc_info">{{ '%-38s'|format('VNet name')}}</th>
    <th class="vpc_info">{{ '%-28s'|format('VNet id') }}</th>
    <th class="vpc_info">{{ '%-14s'|format('instances') }}</th>
    <th class="vpc_info">{{ '%-18s'|format('Address Prefixes') }}</th>
    <th class="vpc_info" id="cidr_assoc">{{ '%-26s'|format('Subnets') }}</th>
  </tr>
  {% for vpc in vpc_info.vpcs %}
  <tr>
  <td>{{ '%-38s'|format(vpc.tags['Name'] | default('Unspecified, missing name tag')) }}</td>
  <td>{{ '%-28s' | format(vpc.id) }}</td>
  <td>{{ '%-14s'|format(ec2_instance_info.instances | selectattr('vpc_id', 'equalto', vpc.id ) | length) -}}</td>
  <td>{{ '%-18s'|format(vpc.cidr_block) }}</td>
  <td>{{ '%-26s' | format(vpc.cidr_block_association_set | length | default('0')) }}</td>
  </tr>
  {% endfor %}
</tbody>
</table>
</div>
</div>
</div>
<!-- END INTERNAL TABLE FOR Ansible -->